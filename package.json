        "@aws-cdk/aws-elasticsearch": "^1.21.1",
        "@aws-cdk/core": "^1.21.1",
        "@aws-cdk/custom-resources": "^1.21.1",
        "@aws-cdk/aws-cloudformation": "^1.21.1",
        "aws-cdk-lib": "^2.0.0",
        "constructs": "^10.0.0"
