        "@aws-cdk/aws-lambda": "1.32.0",
        "@aws-cdk/aws-iam": "1.32.0",
        "@aws-cdk/aws-elasticsearch": "1.32.0",
        "@aws-cdk/core": "1.32.0",
        "@aws-cdk/custom-resources": "1.32.0",
